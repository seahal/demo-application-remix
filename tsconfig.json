{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [ "es2022" ],
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "vitest-setup.ts",
  ],
  "types": ["vitest/globals",],
  "exclude": [
    "node_modules"
  ],
}
